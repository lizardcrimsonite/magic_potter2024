
    <h1>Potters y sus personajes</h1>
    <p>Locaciones y casas de magia</p>



<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">House</th>
    </tr>
  </thead>
  <tbody>
  <% @characters.each do |c| %>
    <tr>
      <th scope="row">
        <%=c.id%>
      </th>
      <td>
        <%= c.name%>
      </td>
      <td>
        <%= c.location%>
      </td>
      <td>
         <%= c.house%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
